doctype html
html
  head
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous")
    title Add Customer
  body
    h1.p-3 Add New Customer
    div.p-3
      form(action='/addcustomer', method='POST')
        div.mb-3
          label(for='firstname', class='form-label') Firstname
          input(type='text', name='firstname', id='firstname').form-control
        div.mb-3
          label(for='lastname', class='form-label') Lastname
          input(type="text", name='lastname', id='lastname').form-control
        div.mb-3
          label(for='email', class='form-label') Email
          input(type='text', name='email', id='email').form-control
        div.mb-3
          label(for='phone', class='form-label') Phone
          input(type='text', name='phone', id='phon').form-control
        div.mb-3
          input(type='submit', value='Add')